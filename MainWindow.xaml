<Window x:Class="quinncareers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:quinncareers"
        mc:Ignorable="d"
        Title="Ryerson University" Height="350" Width="525">
    <StackPanel>
        <Label x:Name="lblTitle"
            Content="Ryerson University"
            HorizontalAlignment="Center"/>
        <Button x:Name="btn1"
                Content="University Info"
                Click="btn1_Click"/>
        <Button x:Name="btn2"
                Content="Course Requirements"
                Click="btn2_Click"/>
        <Button x:Name="btn3"
                Content="First Year Course Information"
                Click="btn3_Click"/>
        <Button x:Name="btn4"
                Content="Potential Careers"
                Click="btn4_Click"/>
        <Label x:Name="lblOutput"
               Content=""/>
    </StackPanel>
</Window>
